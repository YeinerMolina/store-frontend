{
  "name": "retail-empleado",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "retail",
  "sourceRoot": "apps/retail-empleado/src",
  "tags": [
    "scope:empleado",
    "type:app"
  ],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/retail-empleado",
        "browser": "apps/retail-empleado/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/retail-empleado/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/retail-empleado/public"
          }
        ],
        "styles": [
          "apps/retail-empleado/src/styles.scss"
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/shared/styles/src"]
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "port": 4201
      },
      "configurations": {
        "production": {
          "buildTarget": "retail-empleado:build:production"
        },
        "development": {
          "buildTarget": "retail-empleado:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "reportsDirectory": "../../coverage/apps/retail-empleado"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "retail-empleado:build",
        "port": 4201,
        "staticFilePath": "dist/apps/retail-empleado/browser",
        "spa": true
      }
    }
  }
}
